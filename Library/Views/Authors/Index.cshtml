@{
  Layout = "_Layout";
}
@using Library.Models;
@model List<Library.Models.Author>;

<h1>All Authors with Books at this Library</h1>

<ul>

@if (Model.Count == 0)
{
  <h2>No authors have been added yet.</h2>
}
else {
@foreach (Author author in Model)
{
  <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId}) </li>
}
}

</ul>

<p>@Html.ActionLink("Add new author", "Create")</p>
<p>@Html.ActionLink("Return to Home", "Index", "Home")</p>
<p>@Html.ActionLink("View all books", "Index", "Books")</p>